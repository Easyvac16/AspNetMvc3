@model CarViewModel
@{
    ViewData["Title"] = "Cars";
}

<form asp-action="CreateCar" method="post">
    <div>
        <div>
            <label for="Name">Name</label>
            <input type="text" name="Car.Name" value="@Model.Car.Name" required />

            <label for="Color">Color</label>
            <input type="text" name="Car.Color" value="@Model.Car.Color" required />

            <label for="Manufacturer">Manufacturer!</label>
            <input type="text" name="Car.Manufacturer" value="@Model.Car.Manufacturer" required />

            <label for="Year">Year</label>
            <input type="number" name="Car.Year" value="@Model.Car.Year" required />

            <label for="Engine Size">Engine size</label>
            <input type="number" name="Car.EngineSize" value="@Model.Car.EngineSize" required />
        </div>

        <button type="submit">Submit</button>

    </div>
</form>

<form><button asp-action="CarsList">Load Cars</button></form>

